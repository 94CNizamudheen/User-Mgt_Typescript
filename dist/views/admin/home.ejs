<% include('../partials/header.ejs') %>

<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
<link rel="stylesheet" href="/css/userHome.css">

<div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh;">
  <div class="card shadow-lg p-4" style="width: 500px; border-radius: 10px;">
    <div class="text-center mb-4">
      <h1 class="text-primary">Welcome, <%= admin.name %></h1>
      <img src="/userImages/<%= admin.image %>" class="rounded-circle" width="150px" height="150px" alt="<%= admin.name %>">
    </div>
    
    <table class="table table-bordered">
      <tbody>
        <tr>
          <th>Email</th>
          <td><%= admin.email %></td>
        </tr>
        <tr>
          <th>Mobile</th>
          <td><%= admin.mobile %></td>
        </tr>
      </tbody>
    </table>

    <div class="d-grid gap-2 mt-4">
      <a href="/admin/dashboard" class="btn btn-outline-primary btn-block">Dashboard</a>
      <a href="/admin/logout" class="btn btn-danger btn-block">Logout</a>
    </div>
  </div>
</div>

<% include('../partials/footer.ejs') %>

